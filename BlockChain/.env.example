# Private key for deployment (DO NOT COMMIT YOUR REAL PRIVATE KEY)
# Get this from MetaMask: Settings > Security & Privacy > Reveal Private Key
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
# Polygon Mumbai Testnet (Free)
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Polygon Mainnet
POLYGON_MAINNET_RPC_URL=https://polygon-rpc.com

# Or use Alchemy/Infura
# POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
# POLYGON_MAINNET_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Etherscan API key for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Institution name (optional, defaults to "XYZ University")
INSTITUTION_NAME=XYZ University

# Network to deploy on (mumbai or polygon)
NETWORK=mumbai
